<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DicodingEventApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#193855</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/status_bar_color</item>
        <!-- Customize your theme here. -->
        <!-- Konten status bar (ikon dan teks) menjadi terang agar kontras dengan warna gelap -->
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@color/white</item> <!-- Background di dalam SearchView -->
        <item name="android:textColor">@color/black</item> <!-- Warna teks input -->
        <item name="android:textColorHint">@color/gray_500</item> <!-- Warna teks hint -->
        <item name="android:background">@drawable/custom_search_background</item> <!-- Background kotak luar -->
    </style>


</resources>